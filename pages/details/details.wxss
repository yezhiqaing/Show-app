@import "./template/Tip.wxss";
.detailbox {
  padding-bottom: 170rpx;
}
.detailbox .img {
  width: 100%;
  display: block;
}
.detailbox swiper {
  width: 100vw;
  height: 100vw;
}
.detailbox swiper swiper-item image {
  width: 100vw;
  height: 100vw;
}
.detailbox .info {
  background-color: #fff;
  text-align: center;
  padding: 40rpx 0;
}
.detailbox .info .title {
  font-size: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.detailbox .info .text {
  height: 80rpx;
  line-height: 80rpx;
}
.detailbox .info .price {
  height: 80rpx;
  line-height: 80rpx;
  color: darkred;
}
.detailbox .attribute {
  background-color: #fff;
  padding: 20rpx 20rpx;
}
.detailbox .attribute .attrtitle {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
}
.detailbox .attribute .attre_item {
  border-radius: 10rpx;
  margin: 10rpx 0;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  background: #efefef;
  display: flex;
}
.detailbox .attribute .attre_item .name {
  width: 25%;
  text-align: right;
  color: #999;
  margin-right: 10rpx;
}
.detailbox .attribute .attre_item .value {
  width: 75%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detailbox .reportbox {
  background-color: #fff;
  padding: 40rpx ;
}
.detailbox .reportbox .resole {
  width: 100%;
  padding: 0 20rpx;
}
.detailbox .reportbox .resole .raido {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.detailbox .reportbox .resole .raido .yuan {
  margin-right: 20rpx;
  background-color: darkred;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
}
.detailbox .reportbox .resole .raido .resoletop {
  font-size: 30rpx;
}
.detailbox .reportbox .resole .resolebotton {
  color: #666;
}
.Sukbox {
  position: relative;
}
.Sukbox .close_suk {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.Sukbox .Suktop {
  display: flex;
}
.Sukbox .Suktop image {
  width: 200rpx;
  height: 200rpx;
}
.Sukbox .Suktop .Sukpar {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.Sukbox .Sukbottom .shu {
  font-size: 40rpx;
  margin: 40rpx 0;
}
