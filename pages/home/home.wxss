.Home .brandList {
  background-color: white;
}
.Home .brandList .img {
  display: block;
  position: relative;
}
.Home .brandList .info {
  position: absolute;
  left: 10%;
  top: 20%;
}
.Home .brandList .info .title {
  font-size: 27rpx;
}
.Home .brandList .info .price {
  color: red;
