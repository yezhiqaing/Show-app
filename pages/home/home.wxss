.Home .news {
  margin-top: 30rpx;
  background-color: white;
}
.Home .news .newtitle {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}
.Home .popularity {
  background-color: white;
}
.Home .popularity .populvs {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 40rpx;
}
.Home .popularity .popularitylist {
  padding: 0 70rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  height: 200rpx;
  background-color: #fafafa;
}
.Home .popularity .popularitylist image {
  width: 20%;
}
.Home .popularity .popularitylist .hotinfo {
  height: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  margin-left: 40rpx;
}
.Home .popularity .popularitylist .hotinfo .name {
  font-size: 30rpx;
}
.Home .popularity .popularitylist .hotinfo .goods {
